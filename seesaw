<script type="text/javascript">
    var seesaw=document.querySelector(".seesaw");
    var num=0;
    var round;
    var flag=1;
    autoRotate();
    function autoRotate(){
        round=setInterval(function(){
            num+=1;
            seesaw.style.transform="rotateY("+num+"deg)";
        },20);
    }
    seesaw.onclick=function(){
        if(flag==1){
            clearInterval(round);
        }else{
            autoRotate();
        }
        flag=-flag;
    }
</script>
